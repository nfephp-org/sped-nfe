    "forwardPorts": [9000],
    // Configure tool-specific properties.
    "customizations": {
        "vscode": {
            "extensions": [
                "bmewburn.vscode-intelephense-client",
                "xdebug.php-debug",
                "xdebug.php-pack",
                "zobo.php-intellisense",
                "PKief.material-icon-theme"
            ]
        }
    }
